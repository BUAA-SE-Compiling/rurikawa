@import '../../../styles/common'

@lost flexbox flex // ...
@lost rounder 99.9 // ...
@lost gutter 16px
.row {
  flex-wrap: wrap
}

.submit-btn-row {
  justify-content: flex-end
}

.input-list {
  margin-y: var(--space-2)
  lost-flex-container: row
}

.repo-input {
  box-sizing: border-box
  lost-column: 2 / 3
}

.branch-input {
  box-sizing: border-box
  lost-column: 1 / 3
}

.lblk,
.rblk {
  +active-above(theme-breakpoint-lg) {
    lost-column: 1 / 2
  }

  +active-below(theme-breakpoint-lg) {
    lost-column: 1 / 1
  }
}

.id {
  color: var(--secondary-color)
}

.title-row {
  h1 {
    margin-top: var(--space-0)
  }
}
