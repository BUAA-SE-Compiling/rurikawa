@import '../../../styles/common.styl'

@lost flex flexbox
.before-title-spacer {
  height: var(--space-4)
}

.title {
  display: flex
  flex-direction: column
}

.id {
  color: var(--secondary-color)
  font-family: var(--font-family-mono)
  font-size: var(--font-size-smaller)
}

.blk {
  margin-y: var(--space-6)
}

.title>h1 {
  margin-top: var(--space-0)
}

.test-points>h2 {
  margin-bottom: var(--space-2)
}

.result-brief {
  font-size: var(--font-size-title)
  font-weight: 800
}

.result-brief-slider {
  display: flex
  flex-direction: column

  app-slider-view {
    margin-y: var(--space-2)
  }
}

.test-points-wrapper {
  lost-flex-container: row
}

app-job-test-item {
  +active-above(theme-breakpoint-lg) {
    lost-waffle: 1 / 4
  }

  +active-between(theme-breakpoint-md, theme-breakpoint-lg) {
    lost-waffle: 1 / 3
  }

  +active-between(theme-breakpoint-sm, theme-breakpoint-md) {
    lost-waffle: 1 / 2
  }

  +active-below(theme-breakpoint-sm) {
    lost-waffle: 1 / 1
  }
}
