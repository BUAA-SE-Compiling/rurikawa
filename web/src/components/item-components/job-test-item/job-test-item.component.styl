.wrapper {
  padding: var(--space-2)
  color: var(--pal-text-over-highlight)
  font-weight: bold
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  height: 48px
}

.key {
  align-self: flex-start
  flex-grow: 1
  font-size: var(--font-size-larger)
}

.status {
  font-size: calc(var(--font-size-extra-large) / 2 + var(--font-size-title) / 2)
  align-self: flex-end
}
